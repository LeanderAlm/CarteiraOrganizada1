@{
    ViewData["Title"] = "Tela Principal";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela Principal</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Open Sans', sans-serif;
        }

        .top-bar {
            background-color: #F8E4E3;
            color: white;
            text-align: center;
            padding: 1em;
            margin: 0 auto;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .containerMain {
            display: flex;
            justify-content: space-between;
            padding-top: 10%;
        }

        .containerLeft,
        .containerRight {
            text-align: center;
            width: 48%;
            height: auto;
            background-color: #F8E4E3;
            border-radius: 10px;
            padding: 20px;
        }

        .box {
            width: 24%;
            display: inline-block;
            margin: 10px 0;
            padding: 10px;
            background-color: #FFA396;
            text-align: left;
            border-radius: 10px;
            position: relative;
        }

        .box img {
            width: 50px;
            height: 50px;
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .containerLeft p,
        .containerRight p {
            max-width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;}

        #containerSalario {
            display: flex;
            flex-direction: column;
            align-items: center; 
        }

        .divSalario {
            display: flex;
            justify-content: space-around;
            width: 100%; 
        }




          #editarValores {
            background-color: #F8E4E3;
            border-radius: 5px;
            padding: 5px 20px;
            margin-bottom: 10px;
            cursor: pointer;
    }


        
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="top-bar">
        <div class="container">
            <div class="box">
                <img src="~/img/bank.png" alt="icone de um banco">
                <div class="saldoTexto">Saldo Atual</div>
                <div class="saldoValor">R$ 00,00</div>
            </div>
            <div class="box">
                <img src="~/img/revenue.png" alt="Imagem 2">
                <div class="receitaTexto">Receitas</div>
                <div class="receitaValor">R$ 00,00</div>
            </div>
            <div class="box">
                <img src="~/img/expense.png" alt="Imagem 3">
                <div class="despesaTexto">Despesas</div>
                <div class="despesaValor">R$ 00,00</div>
            </div>
            <div class="box">
                <img src="~/img/atm-card.png" alt="Imagem 4">
                <div class="cartaoTexto">Cartão de Crédito</div>
                <div class="cartaoValor">R$ 00,00</div>
            </div>
        </div>
    </div>
    
     

    <div class="containerMain">
       
        <div class="containerLeft">
               
                    <h4 id="tituloSalario">Renda Ativa</h4>
                    <div class="divSalario" >
                        <p id="salario">Salário</p> <p id="itemSalario" class="alterarBtn"> R$,00 </p>
                    </div>

                <h4>Saldo em Banco</h4>
                    <div class="divSalario">
                        <p id="Bradesco">Bradesco</p> <p id="itemBradesco" class="alterarBtn"> R$0,00 </p>
                    </div>
                
                <div class="divSalario">
                        <p id="Nubank">Nubank</p> <p id="itemNubank" class="alterarBtn"> R$0,00 </p>
                    </div>
                
                <div class="divSalario">
                        <p id="Neon">Neon</p> <p id="itemNeon" class="alterarBtn"> R$,00 </p>
                    </div>
            </div>
            <div class="containerRight">
                <h4>Despesa por categoria</h4>
                     <div class="divSalario">
                        <p id="moradia">Moradia</p> <p id="itemMoradia" class="alterarBtn"> R$,00 </p>
                    </div>

                     <div class="divSalario">
                        <p id="estudos">Estudos</p> <p id="itemEstudos" class="alterarBtn"> R$,00 </p>
                    </div>

                     <div class="divSalario">
                        <p id="lazer">Lazer</p> <p id="itemSalario" class="alterarBtn"> R$,00 </p>
                    </div>

                     <div class="divSalario">
                        <p id="saude">Saúde</p> <p id="itemSAude" class="alterarBtn"> R$,00 </p>
                    </div>
            
            </div>
            
        </div>

        <button id="editarValores">Editar Valores</button>
    </div>



    <script>
    const botaoEditar = document.getElementById('editarValores');
    const salarioCampo = document.getElementById('itemSalario');
    const bradescoCampo = document.getElementById('itemBradesco');
    const saldoValor = document.querySelector('.saldoValor');

    botaoEditar.addEventListener('click', function () {
        const salario = parseFloat(salarioCampo.textContent.trim().split('R$')[1].trim().replace(',', '.'));
        const bradesco = parseFloat(bradescoCampo.textContent.trim().split('R$')[1].trim().replace(',', '.'));

        const inputSalario = document.createElement('input');
        inputSalario.type = 'text';
        inputSalario.value = salario;
        inputSalario.style.width = '80px';
        inputSalario.style.marginRight = '10px';

        const inputBradesco = document.createElement('input');
        inputBradesco.type = 'text';
        inputBradesco.value = bradesco;
        inputBradesco.style.width = '80px';
        inputBradesco.style.marginRight = '10px';

        salarioCampo.innerHTML = 'R$ ';
        salarioCampo.appendChild(inputSalario);

        bradescoCampo.innerHTML = 'R$ ';
        bradescoCampo.appendChild(inputBradesco);

        const updateSaldoValor = function () {
            const novoSalario = parseFloat(inputSalario.value.replace(',', '.'));
            const novoBradesco = parseFloat(inputBradesco.value.replace(',', '.'));
            const saldoAtual = novoSalario - novoBradesco;
            saldoValor.textContent = `R$ ${saldoAtual.toFixed(2)}`;
        };

        inputSalario.addEventListener('keyup', function (event) {
            if (event.key === 'Enter') {
                updateSaldoValor();
            }
        });

        inputBradesco.addEventListener('keyup', function (event) {
            if (event.key === 'Enter') {
                updateSaldoValor();
            }
        });
    });

    </script>
</body>

</html>





